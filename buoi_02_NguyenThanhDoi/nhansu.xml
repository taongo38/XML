<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE company [

    <!ELEMENT company (department+, projects)>
    <!ELEMENT department (employee+)>
    <!ATTLIST department
        name CDATA #REQUIRED
        manager CDATA #REQUIRED
    >

    <!ELEMENT employee (name, position, email, salary)>
    <!ATTLIST employee
        id ID #REQUIRED
    >

    <!ELEMENT name (#PCDATA)>
    <!ELEMENT position (#PCDATA)>
    <!ELEMENT email (#PCDATA)>
    <!ELEMENT salary (#PCDATA)>
    <!ATTLIST salary
        currency CDATA #REQUIRED
    >

    <!ELEMENT projects (project+)>
    <!ELEMENT project (member*)>
    <!ATTLIST project
        code ID #REQUIRED
        name CDATA #REQUIRED
        lead IDREF #REQUIRED
    >

    <!ELEMENT member EMPTY>
    <!ATTLIST member
        ref IDREF #REQUIRED
    >
]>
