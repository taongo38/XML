<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE elearning [
    <!ELEMENT elearning (course+)>

    <!ELEMENT course (title, level, duration, instructor, modules, students)>
    <!ATTLIST course
        id ID #REQUIRED
        category CDATA #REQUIRED
    >

    <!ELEMENT title (#PCDATA)>
    <!ELEMENT level (#PCDATA)>
    <!ELEMENT duration (#PCDATA)>
    <!ATTLIST duration
        unit CDATA #REQUIRED
    >

    <!ELEMENT instructor (iname, iemail, iphone)>
    <!ATTLIST instructor
        id ID #REQUIRED
    >
    <!ELEMENT iname (#PCDATA)>
    <!ELEMENT iemail (#PCDATA)>
    <!ELEMENT iphone (#PCDATA)>

    <!ELEMENT modules (module+)>
    <!ELEMENT module (#PCDATA)>
    <!ATTLIST module
        code ID #REQUIRED
    >
    <!ELEMENT students (student+)>
    <!ELEMENT student (sname, semail, sgrade)>
    <!ATTLIST student
        id ID #REQUIRED
        progress CDATA #REQUIRED
    >
    <!ELEMENT sname (#PCDATA)>
    <!ELEMENT semail (#PCDATA)>
    <!ELEMENT sgrade (#PCDATA)>
]>
