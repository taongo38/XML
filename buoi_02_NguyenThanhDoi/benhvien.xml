<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hospital [
    <!-- Gốc -->
    <!ELEMENT hospital (department+, appointment+)>

    <!-- Phòng ban -->
    <!ELEMENT department (doctor+)>
    <!ATTLIST department
        id ID #REQUIRED
        name CDATA #REQUIRED
    >

    <!-- Bác sĩ -->
    <!ELEMENT doctor (docname, specialty, email?)>
    <!ATTLIST doctor
        id ID #REQUIRED
    >
    <!ELEMENT docname (#PCDATA)>
    <!ELEMENT specialty (#PCDATA)>
    <!ELEMENT email (#PCDATA)>

    <!-- Cuộc hẹn -->
    <!ELEMENT appointment (patient, doctor)>
    <!ATTLIST appointment
        id ID #REQUIRED
        date CDATA #REQUIRED
        time CDATA #REQUIRED
        room CDATA #REQUIRED
        status CDATA #REQUIRED
    >

    <!-- Bệnh nhân -->
    <!ELEMENT patient (patname, dob, gender, phone)>
    <!ATTLIST patient
        id ID #REQUIRED
    >
    <!ELEMENT patname (#PCDATA)>
    <!ELEMENT dob (#PCDATA)>
    <!ELEMENT gender (#PCDATA)>
    <!ELEMENT phone (#PCDATA)>
]>

